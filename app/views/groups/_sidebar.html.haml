.chat-side
  .chat-user.clearfix
    %h5
      = current_user.name
    .chat-user__actions
      %a.chat-user__action
      = link_to new_group_path, class: "chat-user__action" do
        %i.fa.fa-pencil-square-o
      %a.chat-user__action
      = link_to edit_user_registration_path, class: "chat-user__action" do
        %i.fa.fa-cog
  %ul.chat-groups
    - @groups.each do |group|
      %li.chat-group
        = link_to group_messages_path(group), class: "chat-group-link" do
          %p.chat-group__name
            = simple_format(group.group_name)
          %p.chat-group__message
            -if last_message = group.messages.last
              = last_message.body
            -else
              = "まだメッセージはありません。"

