.chat.clearfix
  .chat-side
    .chat-user.clearfix
      %h5 Username
      .chat-user__actions
        %a.chat-user__action(href="")
          %i.fa.fa-pencil-square-o
        %a.chat-user__action(href="")
          %i.fa.fa-cog
    %ul.chat-groups
      %li.chat-group
        %p.chat-group__name groupname
        %p.chat-group__message helloworld
  .chat-main
    .chat-header.clearfix
      .chat-header--left
        %h2 groupname
        %p.chat-header__users<>
          Members:
          %span.chat-header__user username
      .chat-header--right
        %a.chat-header__edit-btn(href="")Edit
    .chat-body
      %ul.chat-messages
        %li.chat-message
          .chat-mssage__header.clearfix
            %p.chat-message__name Santa Claus
            %p.chat-message__time 2016/12/25
          %p.chat-message__body hohoho
    .chat-footer
      %form#new_message.new_message
        .chat-footer__body
          %textarea#message_body{rows: "1", :name => "message[body]",  :placeholder => "type a message"}
          %label.chat-footer__image
            %i.fa.fa-image
        %input{:type => "submit", :value => "send"}
